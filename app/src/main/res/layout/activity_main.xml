<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.com.fodder.fooder.MainActivity"
    android:orientation="vertical"
    android:background="#C53737">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FBFBFB"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/logout"
            android:layout_width="45dp"
            android:layout_height="31dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="logoutUser"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/logout" />

        <ImageButton
            android:id="@+id/gusta"
            android:layout_width="40dp"
            android:layout_height="31dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="meGusta"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/chat" />

        <ImageButton
            android:id="@+id/config"
            android:layout_width="40dp"
            android:layout_height="31dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="settings"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/perfil" />

    </LinearLayout>


    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="381dp"
        android:background="#00FFFFFF"
        app:rotation_degrees="15.5"
        tools:context=".MyActivity" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:background="#00FFFFFF"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/izquierda" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/derecha" />
    </LinearLayout>

</LinearLayout>
